generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int       @id @default(autoincrement())
  email    String    @unique
  password String
  isAdmin  Boolean
  cats     Cat[]
  favCats  FavCat[]
  reqAdopts ReqAdopt[]
}

model Cat {
  id          Int       @id @default(autoincrement())
  name        String
  description String
  race        String
  sex         GENDER    
  age         Int
  town        String
  picture     String
  status      STATUS
  popularity  Int       @default(0)
  users       User[]
  favCats  FavCat[]
  reqAdopts ReqAdopt[]
}
  
model FavCat {
  userId Int
  catId  Int

  @@id([userId, catId])

  user    User @relation(fields: [userId], references: [id])
  cat     Cat  @relation(fields: [catId], references: [id])
}

model ReqAdopt {
  userId Int
  catId  Int

  @@id([userId, catId])

  user User @relation(fields: [userId], references: [id])
  cat  Cat  @relation(fields: [catId], references: [id])
}


enum GENDER {
  MALE
  FEMALE
}
enum STATUS {
  ADOPTABLE
  ADOPTED
  PENDING
}